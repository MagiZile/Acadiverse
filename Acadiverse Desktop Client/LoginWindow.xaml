<Window x:Class="Acadiverse_Desktop_Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Acadiverse_Desktop_Client"
        mc:Ignorable="d"
        Title="LoginWindow" Height="147" Width="289">
    <Grid>
        <Label x:Name="lblUsername" Content="Username:" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.132,0"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="23" Margin="84,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="84,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="190,80,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0,0" Click="btnLogin_Click"/>
        <CheckBox x:Name="chkKeepUserLoggedIn" Content="Keep me logged in." HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
